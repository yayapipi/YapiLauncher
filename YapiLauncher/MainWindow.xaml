<Window x:Class="YapiLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YapiLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Center" Source="/YapiLauncher.png" Stretch="UniformToFill" Margin="0,-50,0,-50"/>
        <TextBlock x:Name="CurrentVersionText" HorizontalAlignment="Left" Margin="439,251,0,0" Text="Current Version: 1.0.0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="143" FontWeight="Bold" FontStyle="Normal" Foreground="White" AutomationProperties.Name="CurrentVersionText">
            <TextBlock.Style>
                <Style/>
            </TextBlock.Style>
        </TextBlock>
        <Button x:Name="StatusBtn" Content="Checking Update ..." HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" Height="42" Width="780" Background="#FFCCE5AC" Click="StatusBtn_Click" AutomationProperties.Name="StatusBtn"/>
        <ProgressBar HorizontalAlignment="Center" Height="18" Margin="0,407,0,0" VerticalAlignment="Top" Width="780"/>
    </Grid>
</Window>
